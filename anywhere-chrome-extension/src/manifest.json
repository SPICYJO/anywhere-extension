{
  "manifest_version": 3,
  "name": "Anywhere comment extension",
  "description": "Enable comments on any web page. You can share thoughts with others with this extension.",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "permissions": ["identity", "storage", "tabs"],
  "host_permissions": ["http://localhost:4000/*"],
  "key": ""
}
